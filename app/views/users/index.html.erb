<p id="notice"><%= notice %></p>

<h1>Users List</h1>

<table>
  <thead>
    <tr>
      <th>User Id</th>
      <th>User`s Fullname</th>
      <th>Category</th>
      <th>User`s category Id</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.fullname, user_path(user) %></td>
        <td><%= user.category.name %></td>
        <td><%= user.category.id %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %><br />
<%= link_to 'All Users', users_path %> <br />
<%= link_to 'All Categories', categories_path %>